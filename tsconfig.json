{
  "compilerOptions": {
    "outDir": "tmp",
    "module": "commonjs",
    "target": "es2020",
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.spec.ts"],
  "files": ["src/index.ts"]
}

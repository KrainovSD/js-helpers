{
  "compilerOptions": {
    "outDir": "tmp",
    "module": "CommonJS",
    "target": "ES2017",
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true
  },
  "exclude": ["node_modules", "dist"],
  "files": ["src/index.ts"]
}
